
.placeholder-container{
       padding: 10em;
    /* width: 100%; */
    height: 100%;
    display: flex;
    flex-direction: column;
    position: absolute;
    animation:slideDown .3s linear;
    animation-timing-function: cubic-bezier(0.075, 0.82, 0.165, 1)
}
@keyframes slideDown{
    0%{
        transform: translateY(20px)
    }
    100%{
        transform: translateY(0px)
    }
}
.placeholder-container h4{
    font-family: "Raleway";
    font-weight: 900;
    font-size: 1em;
    text-shadow: 0 0 92px #ccc;
    color: #888;
}
.placeholder_img{
width:500px
}
@media(max-width:768px){
   .placeholder-container h4{
       font-size:10vh
   } 
}