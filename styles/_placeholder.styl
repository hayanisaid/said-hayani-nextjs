
.placeholder-container{
       padding: 10em;
    /* width: 100%; */
    height: 100%;
    display: flex;
    flex-direction: column;
    position: absolute;
    animation:slideDown .3s linear;
    animation-timing-function: cubic-bezier(0.075, 0.82, 0.165, 1)
}
.placeholder_img{
    width:500px
}
@keyframes slideDown{
    0%{
        opacity:0;
        transform:scale(0.5)
    }
    100%{
         opacity:1;
           transform:scale(1)
    }
}
.placeholder-container h4{
    font-family: "Raleway";
    font-weight: 900;
    font-size: 2em;
    text-shadow: 0 0 92px #ccc;
    color: #888;
}
@media(max-width:768px){
   .placeholder-container h4{
       font-size:5vh
   } 
}
@media(min-width:1000px){
   .placeholder-container{
    display: flex;
    padding: 4em;
    position: relative;
    overflow: hidden;
    width: 100%;
    position: fixed;
    flex-direction: column;
    justify-content: center;
    
   }
}