
.placeholder-container{
       padding: 10em;
    /* width: 100%; */
    height: 100%;
    display: flex;
    flex-direction: column;
    position: absolute;

}
.placeholder_img{
    width:500px
}

.placeholder-container h4{
    font-family: "Raleway";
    font-weight: 900;
    font-size: 2em;
    text-shadow: 0 0 92px #ccc;
    color: #888;
}
@media(max-width:768px){
   .placeholder-container h4{
       font-size:4vh
   }
   .placeholder-container{
    justify-content: center;
    padding: 10px;
    height: 100%;
    position: fixed;
   } 
   .placeholder_img{
       margin:0 auto;
       width: 22em;
   }
}
@media(min-width:1000px){
   .placeholder-container{
    display: flex;
    padding: 4em;
    position: relative;
    overflow: hidden;
    width: 100%;
    position: fixed;
    flex-direction: column;
    justify-content: center;
    
   }
}